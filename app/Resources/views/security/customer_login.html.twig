{# ... you will probably extends your base template, like base.html.twig #}

{% extends 'customer/shopwindow.html.twig' %}

{% block title %}LogIn{% endblock %}

{%block stylesheets  %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/login-registration.css') }}" media="all" />
{% endblock %}

{% block content %}

{{ render(controller('AppBundle:Customer:new')) }}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="login common-block btn-style-href">
<h4>LogIn</h4>
	<a id="login-as-seller" href="{{ path('login') }}">Log In as Seller</a>
	<form action="{{ path('customer_login') }}" method="post">
		<table>
			<tr>
				<td>	    
					<label for="username">Username:</label>
				</td>
				<td>	    
					<input type="text" id="username" name="_username" value="{{ last_username }}" />
				</td>
			</tr>
			<tr>
				<td>	    
					<label for="password">Password:</label>
				</td>
				<td>	   
					<input type="password" id="password" name="_password" />
				</td>
			</tr>
		</table>
	    {#
	        If you want to control the URL the user
	        is redirected to on success (more details below)
	        <input type="hidden" name="_target_path" value="/account" />
	    #}
	    <button type="submit">Login</button>
	</form>
</div>
{% endblock %}
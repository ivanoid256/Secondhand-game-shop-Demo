<div class="order-box common-block">
	<div class="order-number">
		{% if is_granted('ROLE_CUSTOMER') %}
			<a href="{{ path('customer_order',{'id':order.id}) }}">Order: {{ order.orderNumber }}</a>
		{% endif %}
	</div>
	<div class="order">
		<table class="order-attrs">
			<thead>
			<tr>
				<th>Seller</th>
				<th>Status</th>
				<th>Date</th>
				<th>Time</th>
				<th>Payment Service</th>
			</tr></thead>
			<tbody>
			<tr>
				<td><a href="{{ path('seller_show',{'id':order.seller.id}) }}">{{ order.seller.username }}</a></td>
				<td>{{ order.status }}</td>
				<td>{{ order.dateTime|date('Y-m-d') }}</td>
				<td>{{ order.dateTime|date('H:i:s') }}</td>
				<td>{{ order.payService }}</td>
			</tr></tbody>
		</table>
		<div class="price-box">
			<span class="label">Sum to pay the {{ order.seller.username }}</span>
			<span class="price">{{ order.sum }}</span>
		</div>
	</div>
	<div class="games">
		{% for game in order.games %}
	    	<a href="{{ path('game_show',{'id':game.id}) }}">{{ game.name }}</a>
	    {% endfor %}
	</div>
	<div class="wright-btns">
		<a href="{{ path('customer_order',{'id':order.id}) }}#comment">Wright to Seller</a>
		<a href="{{ path('customer_order',{'id':order.id}) }}#comment">Wright to Admin</a>
	</div>
</div>

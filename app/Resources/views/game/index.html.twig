{% extends 'seller/base.html.twig' %}

{% block title %} My Games {% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/seller/games.css') }}" media="all" />
{% endblock %}
{% block content %}
    <h3>My Games</h3>

    <table class="my-games">
        <thead>
            <tr>
                <th class="id">Id</th>
                <th class="name">Name</th>
                <th class="genre">Genre</th>
                <th class="price">Price</th>
                <th class="status">Status</th>
                <th class="order">Commission</th>
                <th class="edit">Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td class="id"><a href="{{ path('seller_game_show', { 'id': game.id }) }}">{{ loop.index }}</a></td>
                <td class="name"><a href="{{ path('seller_game_show', { 'id': game.id }) }}">{{ game.name }}</a></td>
                <td class="genre">{{ game.genre }}</td>
                <td class="price">{{ game.price }}</td>
                <td class="status">{{ game.status }}</td>
                <td class="order">{% if game.commission %} 
                	<a href="{{ path('seller_order',{'id':game.commission.id}) }}">{{ game.commission.orderNumber }}</a> 
                	{% endif %}
                </td>
                <td class="edit"><a href="{{ path('seller_game_edit', { 'id': game.id }) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

	<div class="btn-style-href"><a id="add-game" href="{{ path('seller_game_new') }}">Add Game</a></div>
{% endblock %}

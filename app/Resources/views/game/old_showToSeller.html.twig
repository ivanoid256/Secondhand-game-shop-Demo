{% extends 'base.html.twig' %}

{% block body %}
    <h1>Game</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ game.genre }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Commission</th>
                <td>{{ game.commission }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ game.price }}</td>
            </tr>
            <tr>
                <th>Issold</th>
                <td>{{ game.status }}</td>
            </tr>
            <tr>
                <th>MainImage</th>
                <td><img style="width: 150px; height: 100px;" alt="{{ game.mainImage }}" src="{{ asset('uploads/images/'~game.mainImage) }}"></td>
            </tr>        
            </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('seller_game_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('seller_image_new', { 'id': game.id }) }}">Add Image(s)</a>
        </li>
        <li>
            <a href="{{ path('seller_game_edit', { 'id': game.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
